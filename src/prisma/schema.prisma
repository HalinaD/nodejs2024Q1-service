datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(uuid())
  login     String
  password  String
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Artist {
  id       String   @id @default(uuid())
  name     String
  grammy   Boolean
}

model Album {
  id        String  @id @default(uuid())
  name      String
  year      Int
  artistId  String?
  albumId  String?
  duration Int
}

model Track {
  id         String  @id @default(uuid())
  name       String
  year     Int
  artistId String?
}

model Favorites {
  id      String   @id @default(uuid())
  artists String[]
  albums  String[]
  tracks  String[]
}